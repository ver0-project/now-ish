{
	"name": "@ver0/now-ish_temporal",
	"version": "1.0.0",
	"description": "Temporal API adapter for @ver0/now-ish",
	"keywords": [
		"now",
		"relative",
		"time",
		"parser",
		"temporal",
		"timezone",
		"adapter"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ver0-project/now-ish"
	},
	"bugs": {
		"url": "https://github.com/ver0-project/now-ish/issues"
	},
	"homepage": "https://github.com/ver0-project/now-ish/tree/master/packages/now-ish_temporal",
	"sideEffects": false,
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"author": "Anton Zinovyev <xog3@yandex.ru>",
	"engines": {
		"node": ">=18"
	},
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "yarn build:clean && yarn tsc -p tsconfig.build.json",
		"build:clean": "rimraf dist",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix"
	},
	"peerDependencies": {
		"@ver0/now-ish": "workspace:*"
	},
	"dependencies": {
		"@js-temporal/polyfill": "^0.5.1"
	},
	"devDependencies": {
		"@ver0/eslint-config": "^1.3.6",
		"@ver0/eslint-formatter-gha": "^1.0.1",
		"@vitest/coverage-v8": "^4.0.18",
		"eslint": "^9.39.2",
		"rimraf": "^6.1.2",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	}
}
